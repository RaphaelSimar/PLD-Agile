<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>


<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="720.0" prefWidth="1080.0" style="-fx-background-color: #ebf3e8"
            xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <VBox>
            <VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                  style="-fx-background-color: #86a789; -fx-font-size: 50">
                <Text text="DELIFROO">
                    <font>
                        <Font name="Inter Semi Bold" size="40.0"/>
                    </font>
                </Text>
            </VBox>
            <VBox alignment="CENTER">

                <Label  text="Créer une nouvelle livraison" alignment="CENTER">
                    <font>
                        <Font name="Inter Semi Bold" size="40.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="50.0" top="35.0"/>
                    </VBox.margin>
                </Label>
            </VBox>


        </VBox>




    </top>
    <center>
       <!--=====   Form   =======-->
        <GridPane stylesheets="@css/style.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
            <padding>
                <Insets top="50" right="50" bottom="50" left="50"/>
            </padding>

            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <!-- Form Elements -->
            <Label text="Date : " styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <DatePicker fx:id="datePicker" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Créneau : " styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <ChoiceBox fx:id="timeWindowChoiceBox" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Client : " styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <ChoiceBox fx:id="clientChoiceBox" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Button fx:id="newClientButton" text="Ajouter client +" styleClass="form-button" GridPane.columnIndex="2" GridPane.rowIndex="2" />

            <Label text="Livreurs proposés : " styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <ChoiceBox fx:id="courierChoiceBox" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <Button fx:id="newCourierButton" text="Ajouter livreur +" styleClass="form-button" GridPane.columnIndex="2" GridPane.rowIndex="3" />

            <Label text="Adresse : " styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <ChoiceBox fx:id="intersectionChoiceBox" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <Button fx:id="validateNewDeliveryButton" text="Valider" styleClass="form-button" GridPane.columnIndex="2" GridPane.rowIndex="4"  onAction="#onValidateNewDeliveryButtonClick"/>
        </GridPane>
    </center>
    <right>


        <AnchorPane fx:id="mapAnchorPane" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
                    AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" >
            <padding>
                <Insets top="50" right="50" bottom="50" left="50"/>
            </padding>

        </AnchorPane>
    </right>
    <bottom>

    </bottom>
    <left>
    </left>


</BorderPane>
